<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CatFight 3D - Ultimate Arena</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <style>
        :root {
            --primary: #6c5ce7;
            --secondary: #a29bfe;
            --dark: #0f0c29;
            --glass: rgba(255, 255, 255, 0.1);
        }

        body { 
            margin: 0; 
            overflow: hidden; 
            font-family: 'Segoe UI', Roboto, sans-serif; 
            background: linear-gradient(to bottom, #0f0c29, #302b63, #24243e);
            color: white;
            user-select: none;
        }

        /* --- UI OVERLAY --- */
        #game-ui {
            position: absolute;
            top: 0; left: 0; width: 100%; height: 100%;
            display: flex; flex-direction: column;
            align-items: center; justify-content: center;
            z-index: 10;
            pointer-events: none;
        }

        .panel {
            background: var(--glass);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.2);
            padding: 40px;
            border-radius: 30px;
            text-align: center;
            pointer-events: auto;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
            max-width: 400px;
            transition: opacity 0.5s, transform 0.5s;
        }

        h1 { 
            font-size: 3rem; 
            margin: 0 0 10px 0; 
            background: linear-gradient(45deg, #fff, var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 5px;
        }

        .btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 15px 40px;
            border-radius: 50px;
            font-size: 1.2rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 20px;
            box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(108, 92, 231, 0.6);
            background: #7d6dfa;
        }

        /* --- HUD --- */
        #hud {
            position: absolute;
            top: 40px; width: 90%;
            display: none; justify-content: space-between;
            pointer-events: none;
        }

        .stats-box {
            background: var(--glass);
            padding: 15px 25px;
            border-radius: 15px;
            min-width: 150px;
        }

        .hp-container {
            width: 100%; height: 12px;
            background: rgba(0,0,0,0.3);
            border-radius: 6px;
            margin-top: 10px;
            overflow: hidden;
        }

        .hp-bar {
            width: 100%; height: 100%;
            background: linear-gradient(90deg, #ff7675, #fab1a0);
            transition: width 0.5s ease-out;
        }

        .action-btn {
            position: absolute;
            bottom: 50px;
            pointer-events: auto;
            display: none;
        }

        .color-picker {
            display: flex; gap: 15px; justify-content: center; margin: 20px 0;
        }

        .dot {
            width: 35px; height: 35px; border-radius: 50%;
            cursor: pointer; border: 3px solid transparent;
            transition: transform 0.2s;
        }

        .dot:hover { transform: scale(1.2); }
        .dot.active { border-color: white; }

        .hidden { display: none !important; }
    </style>
</head>
<body>

    <div id="game-ui">
        <div id="menu" class="panel">
            <h1>CatFight</h1>
            <p>Wähle dein Fell-Design:</p>
            <div class="color-picker">
                <div class="dot active" style="background: #e67e22;" onclick="pickColor('#e67e22', this)"></div>
                <div class="dot" style="background: #95a5a6;" onclick="pickColor('#95a5a6', this)"></div>
                <div class="dot" style="background: #2c3e50;" onclick="pickColor('#2c3e50', this)"></div>
                <div class="dot" style="background: #ffffff;" onclick="pickColor('#ffffff', this)"></div>
            </div>
            <button class="btn" onclick="startBattle()">IN DIE ARENA</button>
        </div>

        <div id="game-over" class="panel hidden">
            <h1 id="status-text">SIEG!</h1>
            <button class="btn" onclick="location.reload()">NEUER KAMPF</button>
        </div>

        <div id="hud">
            <div class="stats-box">
                <div>DEINE KATZE</div>
                <div class="hp-container"><div id="hp-p1" class="hp-bar"></div></div>
            </div>
            <div class="stats-box" style="text-align: right;">
                <div>BOT KATZE</div>
                <div class="hp-container"><div id="hp-p2" class="hp-bar"></div></div>
            </div>
        </div>

        <button id="attack-btn" class="btn action-btn" onclick="performAttack()">ATTACKE!</button>
    </div>

    <script>
        // --- LOGIK & 3D ---
        let scene, camera, renderer, p1, p2;
        let hp1 = 100, hp2 = 100;
        let colorP1 = 0xe67e22;
        let turnLocked = false;

        function init() {
            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.set(0, 4, 10);

            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.shadowMap.enabled = true;
            document.body.appendChild(renderer.domElement);

            // Licht
            const light = new THREE.DirectionalLight(0xffffff, 1);
            light.position.set(5, 10, 7);
            light.castShadow = true;
            scene.add(light);
            scene.add(new THREE.AmbientLight(0xffffff, 0.4));

            // Boden (Arena)
            const floorGeo = new THREE.CircleGeometry(6, 32);
            const floorMat = new THREE.MeshPhongMaterial({ color: 0x34495e, side: THREE.DoubleSide });
            const floor = new THREE.Mesh(floorGeo, floorMat);
            floor.rotation.x = Math.PI / 2;
            floor.receiveShadow = true;
            scene.add(floor);

            animate();
        }

        function createCat(color, posX) {
            const group = new THREE.Group();
            const mat = new THREE.MeshPhongMaterial({ color: color });

            // Körper
            const body = new THREE.Mesh(new THREE.BoxGeometry(1.2, 0.8, 1.8), mat);
            body.position.y = 0.8;
            body.castShadow = true;
            group.add(body);

            // Kopf
            const head = new THREE.Mesh(new THREE.BoxGeometry(0.9, 0.8, 0.8), mat);
            head.position.set(0, 1.5, 0.7);
            group.add(head);

            // Ohren
            const earGeo = new THREE.ConeGeometry(0.2, 0.4, 4);
            const earL = new THREE.Mesh(earGeo, mat);
            earL.position.set(0.25, 2, 0.7);
            group.add(earL);
            const earR = earL.clone();
            earR.position.x = -0.25;
            group.add(earR);

            // Augen
            const eyeGeo = new THREE.SphereGeometry(0.08, 8, 8);
            const eyeMat = new THREE.MeshBasicMaterial({ color: 0x000000 });
            const e1 = new THREE.Mesh(eyeGeo, eyeMat);
            e1.position.set(0.2, 1.6, 1.1);
            group.add(e1);
            const e2 = e1.clone();
            e2.position.x = -0.2;
            group.add(e2);

            group.position.x = posX;
            scene.add(group);
            return group;
        }

        function pickColor(hex, el) {
            colorP1 = parseInt(hex.replace('#', '0x'));
            document.querySelectorAll('.dot').forEach(d => d.classList.remove('active'));
            el.classList.add('active');
        }

        function startBattle() {
            document.getElementById('menu').classList.add('hidden');
            document.getElementById('hud').style.display = 'flex';
            document.getElementById('attack-btn').style.display = 'block';

            p1 = createCat(colorP1, -3);
            p2 = createCat(0x555555, 3);
            p2.rotation.y = Math.PI; // Bot schaut dich an
        }

        async function performAttack() {
            if (turnLocked) return;
            turnLocked = true;

            // Spieler greift an
            await jumpAnimation(p1, 1);
            hp2 -= Math.floor(Math.random() * 20) + 10;
            updateHP();

            if (hp2 <= 0) return endGame("DU HAST GEWONNEN!");

            // Kurze Pause, dann Bot
            setTimeout(async () => {
                await jumpAnimation(p2, -1);
                hp1 -= Math.floor(Math.random() * 15) + 5;
                updateHP();
                if (hp1 <= 0) return endGame("BOT HAT GEWONNEN...");
                turnLocked = false;
            }, 800);
        }

        function jumpAnimation(cat, direction) {
            return new Promise(resolve => {
                let startX = cat.position.x;
                let t = 0;
                let interval = setInterval(() => {
                    t += 0.1;
                    cat.position.x += 0.4 * direction;
                    cat.position.y = Math.abs(Math.sin(t)) * 1.5;

                    if (t >= Math.PI) {
                        clearInterval(interval);
                        cat.position.x = startX;
                        cat.position.y = 0;
                        resolve();
                    }
                }, 20);
            });
        }

        function updateHP() {
            document.getElementById('hp-p1').style.width = Math.max(0, hp1) + "%";
            document.getElementById('hp-p2').style.width = Math.max(0, hp2) + "%";
        }

        function endGame(msg) {
            document.getElementById('attack-btn').classList.add('hidden');
            document.getElementById('status-text').innerText = msg;
            document.getElementById('game-over').classList.remove('hidden');
        }

        function animate() {
            requestAnimationFrame(animate);
            if(p1) p1.rotation.y = Math.sin(Date.now() * 0.001) * 0.1;
            if(p2) p2.rotation.y = Math.PI + Math.sin(Date.now() * 0.0012) * 0.1;
            renderer.render(scene, camera);
        }

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });

        init();
    </script>
</body>
</html>
